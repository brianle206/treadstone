<!DOCTYPE html>
<html>
<head>
  <title>Treadstone</title>
  <%= stylesheet_link_tag    "treadstone/application", media: "all" %>
  <%= javascript_include_tag "treadstone/application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="side-panel">
    <h1>TreadStone</h1>

    <ul>
      <li>
        <%= link_to treadstone.root_path do %>
          <i class="fa fa-dashboard"></i> Dashboard
        <% end %>
      </li>
    </ul>

    <ul>
      <% Treadstone.configuration.content_classes.each do |class_name| %>
        <li>
          <%= link_to class_name.tableize.titleize, entries_path(content_class: class_name.tableize) %>
        </li>
      <% end %>
    </ul>
  </nav>
	<div class="content-wrapper">
	    <div class="wrapper wrapper-flash">
	      <%= render partial: "wellspring/shared/flash_messages", flash: flash %>
	    </div>

	    <%= yield %>
 	</div>
</body>
</html>
